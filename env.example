SUPERSET_ADMIN_PASSWORD=admin
SUPERSET_ADMIN_EMAIL=admin@sptrans.com

# ==================================
# GRAFANA
# ==================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# ==================================
# PROMETHEUS
# ==================================
PROMETHEUS_RETENTION_TIME=30d

# ==================================
# APPLICATION SETTINGS
# ==================================
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=INFO
TZ=America/Sao_Paulo

# ==================================
# DATA INGESTION
# ==================================
API_POLLING_INTERVAL_SECONDS=180  # 3 minutes
GTFS_UPDATE_SCHEDULE=0 3 * * *    # Daily at 3 AM
DATA_RETENTION_DAYS=30

# ==================================
# DATA QUALITY
# ==================================
DQ_CHECK_INTERVAL_MINUTES=60
DQ_ALERT_THRESHOLD=0.95
ENABLE_DATA_QUALITY_CHECKS=true

# ==================================
# MONITORING
# ==================================
ENABLE_PROMETHEUS=true
ENABLE_GRAFANA=true
METRICS_PORT=9091

# ==================================
# GEOCODING (Nominatim)
# ==================================
GEOCODING_API_URL=https://nominatim.openstreetmap.org
GEOCODING_RATE_LIMIT=1  # requests per second
